# [source/Simulation/SimulationMain/StreamingDopplerShift]

# names of files
basenm   = "streamingdopplershift_"
log_file = "streamingdopplershift.log"

# Initial Setting
sim_rad_spectrum     = "Fermi-Dirac"
sim_rad_direction    = "X"
sim_velx             = 0.1e0 # lightspeed

# physical domain
geometry = "cartesian"
xmin = 0.0 
xmax = 1.0e3
ymin = 0.0
ymax = 1.0e2
zmin = 0.0
zmax = 1.0e2

# boundary conditions
xl_boundary_type = "user"   # fixed boundary
xr_boundary_type = "outflow"

# refinement
nblockx = 12

lrefine_max = 1
lrefine_min = 1

refine_var_1 = "dens"
refine_var_2 = "pres"

# go for nend steps or tmax seconds, whichever comes first
nend = 2001
tmax = 1.0e-7 #

# timestep
dtinit = 1.0e-10
dtmax  = 1.0e-10
dtmin  = 1.0e-10
tstep_change_factor = 1.0e0
dr_dtMinContinue = 5.0e-20
dr_tstepSlowStartFactor = 1.0e0
dr_shortenLastStepBeforeTMax = .true.
cfl = 0.8

# checkpoint/plot files
restart = .true.

checkpointFileNumber = 1
plotFileNumber = 0

ignoreForcedPlot = .false.

plot_var_1 = "T001"
plot_var_2 = "T0033"

# eos options
eintSwitch = 1.e-4

# radiation transport
useRadTrans = .true.

rt_doExplicit = .true.
rt_doImplicit = .false.

rt_eL    = 0.0
rt_eR    = 30.0
rt_zoomE = 1.0
rt_bcE   = 10
rt_positivityLimiter = .true.
rt_UpperBry1         = 1.0d100

# thornado options
dens_i = 1.0e0 # thornado unit 
temp_i = 1.0e0 # 

# other flags
useParticles = .false.
